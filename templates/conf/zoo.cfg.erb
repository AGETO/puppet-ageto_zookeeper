#
# ZooKeeper Configuration
# (generated by Puppet; DO NOT EDIT)
#

# the port at which the clients will connect
clientPort=2181

# timings
tickTime=2000
initLimit=10
syncLimit=5

# snapshot & logs directory
dataDir=<%= datastore %>
dataLogDir=<%= datastore_logs %>

# cluster members
<% cluster_nodes.each_pair do |id, value_hash| -%>
server.<%= id -%>=<%= value_hash['server'] -%>:<%= value_hash['serverPort'] -%>:<%= value_hash['leaderElectionPort'] %>
<% end -%>

# rudece transaction log size and force snapshots more often 
# (compensate stability issues in virtalized environments)
preAllocSize=30000
snapCount=10000

# auto-cleanup every hout
autopurge.snapRetainCount=20
autopurge.purgeInterval=1

# disable ACL (for now)
skipACL=true
